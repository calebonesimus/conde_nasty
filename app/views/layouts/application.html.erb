<!DOCTYPE html>
<html>
<head>
  <title>Conde Nasty</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrap">
    <nav role="navigation" class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Conde Nasty", root_path, class: "navbar-brand" %>
        </div>
        <div id="navbar">
          <ul class="nav navbar-nav">
            <li><%= link_to "Hot", subreddit_path(:reddit => "hot_reddit") %></li>
            <li><%= link_to "Nasty", subreddit_path(:reddit => "nasty_reddit") %></li>
          </ul>
        </div>
        <div id="navbar">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "Profile",
                      view_profile_path(:username => current_user.username) %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
            <% else %>
              <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %></li>
              <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Creates notices and alerts only when needed -->
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

  </div>
  <div id="footer"></div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
